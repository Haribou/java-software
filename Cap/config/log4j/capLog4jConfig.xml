<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE log4j:configuration SYSTEM "log4j.dtd"><log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">	<appender name="mainFileAppender" class="org.apache.log4j.RollingFileAppender">		<param name="File" value="logs/cap.log"/>		<param name="Append" value="false"/>    	<param name="MaxBackupIndex" value="10"/>    	<param name="MaxFileSize" value="20MB"/>     	<layout class="org.apache.log4j.EnhancedPatternLayout">     		<param name="ConversionPattern" value="%-5p %d{yyyy-MM-dd HH:mm:ss.SSS 'GMT'Z} [%t] %c{1} - %m%n"/>     	</layout>   	</appender>  	<appender name="securityFileAppender" class="org.apache.log4j.RollingFileAppender">		<param name="File" value="logs/capSecurity.log"/>		<param name="Append" value="false"/>    	<param name="MaxBackupIndex" value="10"/>    	<param name="MaxFileSize" value="20MB"/>     	<layout class="org.apache.log4j.EnhancedPatternLayout">     		<param name="ConversionPattern" value="%-5p %d{yyyy-MM-dd HH:mm:ss.SSS 'GMT'Z} [%t] %c{1} - %m%n"/>     	</layout>   	</appender>	<logger name="com.avaya.cap.Security" additivity="false">  		<level value="trace"/>  		<appender-ref ref="securityFileAppender"/>  	</logger>	<logger name="com.avaya.cap" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.avaya.messaging" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="org.apache.http" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>	<logger name="org.springframework" additivity="false">  		<level value="info"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<root>     	<priority value="trace"/>   	</root></log4j:configuration>