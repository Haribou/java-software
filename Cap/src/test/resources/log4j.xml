<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE log4j:configuration SYSTEM "log4j.dtd"><log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">	<appender name="mainFileAppender" class="org.apache.log4j.RollingFileAppender">		<param name="File" value="logs/fbRtGateway.log"/>		<param name="Append" value="false"/>    	<param name="MaxBackupIndex" value="10"/>    	<param name="MaxFileSize" value="1000000"/>     	<layout class="org.apache.log4j.EnhancedPatternLayout">     		<param name="ConversionPattern" value="Level=%-5p date=%d{MM/dd/yyyy, HH:mm:ss} location=%c{1}: %m%n"/>     	</layout>   	</appender>  	<appender name="securityFileAppender" class="org.apache.log4j.RollingFileAppender">		<param name="File" value="logs/fbRtGatewaySecurity.log"/>		<param name="Append" value="false"/>    	<param name="MaxBackupIndex" value="10"/>    	<param name="MaxFileSize" value="1000000"/>     	<layout class="org.apache.log4j.EnhancedPatternLayout">     		<param name="ConversionPattern" value="Level=%-5p date=%d{MM/dd/yyyy, HH:mm:ss} location=%c{1}: %m%n"/>     	</layout>   	</appender>  	<logger name="com.avaya.socialMedia.facebookRt.gateway" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>	  	<logger name="com.avaya.socialMedia.autoResponder" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.avaya.socialMedia.facebookRt.gateway.Security" additivity="false">  		<level value="trace"/>  		<appender-ref ref="securityFileAppender"/>  	</logger>  	<logger name="com.avaya.socialMedia.fileStorageManager" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.avaya.socialMedia.socialMeter" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.avaya.socialMedia.commons" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.avaya.messaging.aws" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.avaya.nlp.client.NlpClient" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.avaya.messaging.relationalDb" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.avaya.socialMedia.relationalMetricsDb" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.avaya.socialMedia.infrastructure.watchdog" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.amazon.sqs.javamessaging" additivity="false">  		<level value="info"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.amazonaws.http" additivity="false">  		<level value="info"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="org.apache.http" additivity="false">  		<level value="info"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.avaya.messaging.dbConfigurator" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>	<logger name="com.avaya.messaging.basicDbConfigurator" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.avaya.messaging.configuration.dbStorage" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<logger name="com.avaya.messaging.configuration.transfer" additivity="false">  		<level value="trace"/>  		<appender-ref ref="mainFileAppender"/>  	</logger>  	<root>     	<priority value="info"/>   	</root></log4j:configuration>